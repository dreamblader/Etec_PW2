@page
@model proj01.Pages.AddCuriosidadeModel
@{
    ViewData["Title"] = "Conte sua Curiosidade";
}

<div class="container p-5">
    <form method="post" class="mx-md-5 mx-3">

        <div class="form-group">
            <label for="formTitulo">Titulo</label>
            <input type="text" asp-for="novaCuriosidade.titulo" class="form-control" id="formTitulo">
        </div>

        <div class="form-group">
            <label for="formDesc">Descrição</label>
            <textarea type="text" asp-for="novaCuriosidade.descricao" class="form-control" id="formDesc">
            </textarea>
        </div>

        <button class="btn btn-primary" type="submit">Enviar</button>
    </form>
</div>
