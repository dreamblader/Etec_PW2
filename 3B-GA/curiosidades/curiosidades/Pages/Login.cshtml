@page
@model proj01.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container p-5">
    <form method="post" class="mx-md-5 mx-3">

        <div class="form-group">
            <label for="formUser">Usuáro</label>
            <input type="text" asp-for="user" class="form-control" id="formUser">
        </div>

        <div class="form-group">
            <label for="formPass">Senha</label>
            <input type="password" asp-for="pass" class="form-control" id="formPass">    
        </div>

        @if (Model.userError)
        {
            <div class="error-feedback">Usuário ou Senha Incorretos!</div>
        }

        

       

        

        <button class="btn btn-primary" type="submit">Logar</button>
    </form>
</div>
