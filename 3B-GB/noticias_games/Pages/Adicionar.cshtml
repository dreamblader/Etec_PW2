@page
@model AdicionarModel
@{
}

<form method="post">

  <div class="form-group">
    <label for="title">Titulo</label>
    <input type="text" class="form-control" id="title" name="novaNoticia.titulo">
  </div>

  <div class="form-group">
    <label for="game">Nome do Jogo</label>
    <input type="text" class="form-control" id="game" name="novaNoticia.jogo">
  </div>

  <div class="form-group">
    <label for="image">Link da Imagem</label>
    <input type="text" class="form-control" id="image" name="novaNoticia.imagem">
  </div>

  <div class="form-group">
    <label for="description">Descrição</label>
    <textarea type="text" class="form-control" id="description" name="novaNoticia.descricao" rows="5"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
