@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <div class="row justify-content-center">
        <h1 class="display-4">
            Confira os nossos melhores locais
            <br />
            do
            <br />
            @Model.nomeWeb
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-3 push-bottom">
            <a href="/?id=@Model.antId" >
                <img class="img-thumbnail w-100" src="https://media.moneytimes.com.br/uploads/2020/08/rio-de-janeiro-91.jpg" />
            </a>
        </div>
        <div class="col-6">
            <img class="img-fluid w-100" src="https://media.moneytimes.com.br/uploads/2020/08/rio-de-janeiro-91.jpg" />
        </div>
        <div class="col-3 push-bottom">
            <a href="/?id=@Model.proxId" >
                <img class="img-thumbnail w-100" src="https://media.moneytimes.com.br/uploads/2020/08/rio-de-janeiro-91.jpg" />
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <p>Descrição: Sobre</p>
    </div>

    <div class="row justify-content-center">
        <p>@Model.localSelecionado - Brasil</p>
    </div>

    <div class="row justify-content-center">
        <button type="button" class="btn btn-primary">Ver Mais</button>
    </div>

</div>





